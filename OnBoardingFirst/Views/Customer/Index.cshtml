@model IEnumerable<OnBoardingFirst.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Add New Customer</button>


@Html.Partial("Create", new OnBoardingFirst.Models.Customer())

<h2>Customers</h2>
<table class="table-striped">
    <tr>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="col-md-4">
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="col-md-2">
                @Html.DisplayFor(i => item.ID)
            </td>

            <td class="col-md-2">
                @Html.DisplayFor(i => item.Name)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(i => item.Address)
            </td>
            <td class="col-md-1">
                @Html.ActionLink("Edit", "Edit", new { id = item.ID })

            </td>

            <td class="col-md-1">
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>

        </tr>


    }



</table>


@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")




}
